<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#575757"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:id="@+id/lv">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="107dp"
        android:background="@drawable/fondonav"
        android:id="@+id/imageView3"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_height="76dp"
        android:layout_width="90dp"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7"
        android:id="@+id/imageProfilee"
        android:src="@drawable/perfil1"


        android:scaleType="centerCrop"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        android:layout_marginTop="60dp"
        android:elevation="5dp" />

    <TextView
        android:id="@+id/namedrawer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Android Studio"
        android:textAlignment="viewStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginStart="14dp"
        app:layout_constraintLeft_toRightOf="@+id/imageProfilee"
        android:layout_marginLeft="14dp"
        app:layout_constraintTop_toTopOf="@+id/imageProfilee"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="16sp"
        android:textStyle="normal|bold"
        app:layout_constraintRight_toRightOf="@+id/imageView3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.19"
        android:elevation="5dp" />

</android.support.constraint.ConstraintLayout>
