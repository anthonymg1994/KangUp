<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/cons"
    android:background="@drawable/background_gradient"
    tools:context="com.mx.bridgestudio.kangup.Views.PaginasInicio.RegisterActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarRegister"
        android:layout_height="56dp"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/ToolbarColoredBackArrow"
        tools:ignore="MissingConstraints"
        app:title="Registro"
        app:titleTextColor="@android:color/white"
        android:theme="?attr/actionBarTheme"
        app:navigationIcon="?android:attr/homeAsUpIndicator"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Siguiente"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:id="@+id/next"
        android:background="#29235b"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="88dp"
        app:layout_constraintTop_toBottomOf="@+id/passwordr"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ScrollView

        app:layout_constraintTop_toBottomOf="@+id/toolbarRegister"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fillViewport="false"
        android:id="@+id/scroll"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_width="0dp"
        android:isScrollContainer="true"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
           >

            <EditText
                android:layout_width="0dp"
                android:layout_height="31dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/namedrawer"
                android:hint="Nombre"
                tools:ignore="MissingConstraints"
                android:background="@drawable/buttons_alpha"
                android:adjustViewBounds="true"
                android:textAlignment="center"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/cardImage"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="50dp"
                android:textColor="@android:color/white" />


            <EditText
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastname"
                android:hint="Apellidos"
                android:layout_width="0dp"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="50dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttons_alpha"
                app:layout_constraintTop_toBottomOf="@+id/namedrawer"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_height="31dp"
                android:ems="10"
                android:id="@+id/editEmail"
                android:hint="Email"
                android:layout_width="0dp"
                android:inputType="textEmailAddress"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/buttons_alpha"
                app:layout_constraintTop_toBottomOf="@+id/lastname"
                app:layout_constraintHorizontal_bias="0.37"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_height="31dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:background="@drawable/buttons_alpha"
                android:hint="Contraseña"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_bias="0.37"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editEmail"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <EditText
                android:layout_height="31dp"
                android:inputType="textPassword"
                android:ems="10"
                android:background="@drawable/buttons_alpha"
                android:id="@+id/passwordr"
                android:hint="Confirmar contraseña"
                android:layout_width="0dp"
                app:layout_constraintHorizontal_bias="0.37"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/password"
                android:layout_marginStart="50dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="50dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="50dp"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:clickable="true"
                app:fabSize="mini"
                app:srcCompat="@drawable/add"
                android:id="@+id/floatingActionButton"
                app:layout_constraintBottom_toBottomOf="@+id/cardImage"
                app:layout_constraintTop_toTopOf="@+id/cardImage"
                app:layout_constraintVertical_bias="0.93"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                app:layout_constraintHorizontal_bias="0.58" />

            <android.support.v7.widget.CardView
                android:elevation="15dp"
                android:id="@+id/cardImage"
                app:cardCornerRadius="50dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginEnd="16dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp">

                <ImageView
                    android:layout_height="0dp"
                    android:layout_width="368dp"
                    android:id="@+id/imageProfile"

                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    tools:layout_editor_absoluteY="113dp"
                    tools:layout_editor_absoluteX="8dp">
                </ImageView>
            </android.support.v7.widget.CardView>
        </android.support.constraint.ConstraintLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>