<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mx.bridgestudio.kangup.Views.MenuActivity.HistoryDetailsActivity"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calificacionLayout"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calificacionTitle"
            android:textAlignment="center"
            android:textSize="18sp"/>

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ratingViaje" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calificacionLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp">

            <ImageView
                android:layout_width="113dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/auto"
                android:id="@+id/imageAuto"
                android:scaleType="centerCrop" />

            <TextView
                android:text="Vehiculo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtVehicle"
                android:textAlignment="center"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_width="140dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView26" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="113dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/auto"
                android:id="@+id/imageSocio"
                android:scaleType="centerCrop" />

            <TextView
                android:text="Socio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtSocio"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp">

        <TextView
            android:text="Nombre :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socioLbl"
            android:layout_marginStart="48dp"
            app:layout_constraintLeft_toRightOf="@+id/marcaTxt"
            android:layout_marginLeft="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.19"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:text="anio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/anioTxt"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/textView33"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/modeloTxt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:text="marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/marcaTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/marcaLbl"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="modelo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeloTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/modeloLbl"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/marcaTxt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:text="Marca :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/marcaLbl"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="Modelo :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/modeloLbl"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/marcaLbl"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp" />

        <TextView
            android:text="AÃ±o :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView33"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/modeloLbl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:text="socio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/socioTxt"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/socioLbl"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.14" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="Viajes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView38"
        android:textSize="15sp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <TextView
        android:text="Paquetes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView38"
        app:layout_constraintBottom_toTopOf="@+id/include6"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.19" />

    <Button
        android:text="Ver mas"
        android:layout_height="wrap_content"
        android:id="@+id/viajeButton"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView38"
        android:layout_marginLeft="8dp"
        android:layout_width="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <Button
        android:text="Ver mas"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView7"
        android:layout_marginLeft="8dp"
        android:id="@+id/paqueteButton"
        android:layout_width="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viajeButton"
        app:layout_constraintBottom_toTopOf="@+id/include6"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <include
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        layout="@layout/toolbar_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/include6" />

    <TextView
        android:text="Total:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/totalLbl"
        android:layout_marginStart="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toTopOf="@+id/include6"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:text="$ 0.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:id="@+id/totalTxt"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/totalLbl"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintBottom_toTopOf="@+id/include6"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/paqueteButton" />

</android.support.constraint.ConstraintLayout>
