<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsCell"
    android:background="@drawable/backall"
    android:layout_width="match_parent"
    android:layout_gravity="center|top"
    android:layout_height="35dp">

    <TextView
        android:text="$ 0.00"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffcc00"
        android:textSize="16sp"
        android:id="@+id/nombreArt"
        android:layout_marginEnd="32dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/nombrePaqueteRecycler"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.89"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Nombre"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffcc00"
        android:textSize="16sp"
        android:id="@+id/nombrePaqueteRecycler"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toRightOf="@+id/packChecked"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/packChecked"
        app:buttonTint="#ffffff"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>