<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/typeofcar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout android:id="@+id/footer"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:background="#ffa500"
        android:layout_alignParentBottom="true" style="@android:style/ButtonBar"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bordercalendarr"
            app:srcCompat="@android:drawable/ic_lock_idle_alarm"
            android:id="@+id/changeHour"

            android:layout_weight="0.23"
            android:elevation="0dp"
            android:tint="@color/white" />



        <TextView
            android:text="hh : mm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/hour"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="#10000000"
            android:layout_gravity="center" />




        <TextView
            android:text="dd / mm / yy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/date"
            android:layout_weight="0.80"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="#10000000"
            android:layout_gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bordercalendar"
            app:srcCompat="@android:drawable/ic_menu_my_calendar"
            android:id="@+id/changeDate"

            android:layout_weight="0.06"
            android:elevation="0dp" />


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_height="309dp"
        android:layout_below="@+id/tabHost"
        android:visibility="visible"
        android:layout_width="wrap_content"
        tools:layout_editor_absoluteY="104dp"
        tools:layout_editor_absoluteX="0dp">

    </android.support.v4.view.ViewPager>

    <it.neokree.materialtabs.MaterialTabHost
        android:id="@+id/tabHost"
        android:layout_height="48dp"
        app:accentColor="@color/white"
        app:primaryColor="@color/colorPrimaryDark"
        android:layout_below="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_marginTop="56dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <include
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        layout="@layout/toolbar_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/include" />


</android.support.constraint.ConstraintLayout>
