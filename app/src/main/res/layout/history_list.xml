<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView
        android:elevation="15dp"
        android:id="@+id/Imageresponsable"
        app:cardCornerRadius="50dp"
        android:layout_centerHorizontal="true"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp">


        <ImageView
            android:layout_height="80dp"
            android:layout_width="match_parent"
            android:id="@+id/imageProfile"
            android:src="@drawable/ic_menu_camera"
            android:layout_alignParentTop="true"
            android:layout_gravity="center">
        </ImageView>
    </android.support.v7.widget.CardView>

    <TextView
        android:text="Modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/ModeloCar"
        android:textSize="37px"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/Imageresponsable"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/total"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Fecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30px"
        android:id="@+id/fecha"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintVertical_bias="0.58000004"
        app:layout_constraintRight_toLeftOf="@+id/total"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/Imageresponsable"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ModeloCar" />

    <TextView
        android:text="$ 99.00"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textStyle=""
        android:id="@+id/total"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="8dp"
        android:textSize="45px" />


</android.support.constraint.ConstraintLayout>