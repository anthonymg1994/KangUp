<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/backall"
    android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageCar"

            android:scaleType="centerCrop"

            android:contentDescription=""
            tools:ignore="ContentDescription,PxUsage"
            android:layout_width="125dp"
            android:layout_height="81dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.49"
            android:cropToPadding="false"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" />




        <TextView
            android:id="@+id/titleCar"
            android:text="Modelo"
            android:textStyle="bold"

            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffcc00"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCar"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="textStart" />
        <TextView
            android:id="@+id/description"
            android:text="Description"
            android:textStyle="italic"

            tools:ignore="HardcodedText"
            android:layout_width="188dp"
            android:layout_height="22dp"
            android:maxLines="4"
            android:textColor="#808080"
            android:textSize="15sp"
            android:textAlignment="textStart"
            app:layout_constraintLeft_toLeftOf="@+id/titleCar"
            app:layout_constraintTop_toBottomOf="@+id/titleCar"
            android:layout_marginTop="4dp" />


        <ImageButton
            android:layout_width="38dp"
            android:layout_height="37dp"
            app:srcCompat="@drawable/favorite"
            android:id="@+id/starButton"
            android:background="@android:color/transparent"
            android:onClick="onToggleStar"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.99"
            app:layout_constraintVertical_bias="0.6"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/imageCar"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            android:layout_marginBottom="8dp"
            android:scaleType="centerInside" />

</android.support.constraint.ConstraintLayout>

