<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/appmenu"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:text="Completa la informacion para la reservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="67dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <Button
        android:text="Confirmar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/creservar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <ImageButton
        android:layout_width="42dp"
        android:layout_height="34dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:id="@+id/imageButtonCalendar"
        tools:layout_editor_absoluteY="138dp"
        tools:layout_editor_absoluteX="150dp" />

    <TextView
        android:text="Hora :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        tools:layout_editor_absoluteY="113dp"
        tools:layout_editor_absoluteX="267dp" />

    <TextView
        android:text="Fecha :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        tools:layout_editor_absoluteX="93dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:text="Hh:mm"
        android:ems="10"
        android:id="@+id/hora"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        tools:layout_editor_absoluteX="206dp" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:text="dd/mm/yy"
        android:ems="10"
        android:id="@+id/fecha"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:id="@+id/listViewPaquetes"
        app:layout_constraintHorizontal_bias="0.54" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="65dp"
        tools:layout_editor_absoluteY="262dp"
        android:id="@+id/listViewRuta"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp" />

    <ImageButton
        android:layout_width="41dp"
        android:layout_height="34dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        android:id="@+id/imageButtonTime"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        app:layout_constraintLeft_toRightOf="@+id/hora"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:text="Agrega paquetes a tu reservacion :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.19"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/listViewRuta" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fecha"
        android:id="@+id/linearLayout2"
        app:layout_constraintBottom_toTopOf="@+id/listViewRuta"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.25"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp">

        <TextView
            android:text="Ruta (s)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView11"
            android:textAlignment="viewStart"
            android:foregroundGravity="center_vertical|fill_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <Button
            android:text="+"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:id="@+id/addruta"
            android:gravity="right|end"
            android:layout_weight="0.02"
            android:layout_marginLeft="10dp" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>