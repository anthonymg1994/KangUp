<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/appmenu"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:text="Completa la informacion para la reservacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="14sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Confirmar"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintBottom_toTopOf="@+id/include"
        android:layout_marginBottom="4dp" />

    <ImageButton
        android:layout_width="42dp"
        android:layout_height="34dp"
        app:srcCompat="@android:drawable/ic_menu_my_calendar"
        android:id="@+id/imageButtonCalendar"
        app:layout_constraintRight_toLeftOf="@+id/hora"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toRightOf="@+id/fecha"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.96" />

    <TextView
        android:text="Hora :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        tools:layout_editor_absoluteY="149dp"
        android:layout_marginEnd="176dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="176dp" />

    <TextView
        android:text="Fecha :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintRight_toLeftOf="@+id/textView7"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintBottom_toTopOf="@+id/fecha"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:layout_width="122dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:text="Hh:mm"
        android:ems="10"
        android:id="@+id/hora"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="192dp"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:layout_width="110dp"
        android:layout_height="34dp"
        android:inputType="textPersonName"
        android:text="dd/mm/yy"
        android:ems="10"
        android:id="@+id/fecha"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="76dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        android:id="@+id/listViewPaquetes"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.060000002" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:id="@+id/listViewRuta"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageButton
        android:layout_width="41dp"
        android:layout_height="34dp"
        app:srcCompat="@android:drawable/ic_lock_idle_alarm"
        android:id="@+id/imageButtonTime"
        app:layout_constraintHorizontal_bias="0.16"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/hora"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.95"
        android:layout_marginBottom="8dp" />

    <TextView
        android:text="Agrega paquetes a tu reservacion :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/listViewRuta" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="40dp"
        android:id="@+id/linearLayout2"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/hora">

        <TextView
            android:text="Ruta (s)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView11"
            android:textAlignment="viewStart"
            android:foregroundGravity="center_vertical|fill_vertical|center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp" />

        <Button
            android:text="+"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:id="@+id/addruta"
            android:gravity="right|end"
            android:layout_weight="0.02"
            android:layout_marginLeft="10dp" />
    </LinearLayout>

    <include
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        layout="@layout/toolbar_down"
        android:id="@+id/include"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>