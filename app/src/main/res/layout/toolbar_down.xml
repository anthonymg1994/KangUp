<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbardown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#262626"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_catalogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="40dp">

                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:id="@+id/catalogoToolbar"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/catalogo"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_historial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="40dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toRightOf="@+id/layout_favoritos"
                android:layout_marginLeft="40dp"
                app:layout_constraintHorizontal_bias="0.51">

                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/historial"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    android:id="@+id/historialToolbar" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_favoritos"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toRightOf="@+id/layout_noticias"
                android:layout_marginLeft="40dp">

                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/favoritos"
                    android:id="@+id/favoritosToolbar"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/layout_noticias"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="40dp"
                app:layout_constraintLeft_toRightOf="@+id/layout_catalogo"
                android:layout_marginLeft="40dp">

                <ImageButton
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/noticias"
                    android:id="@+id/noticiasToolbar"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent" />

            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
