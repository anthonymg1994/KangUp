<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backall"
    app:layout_collapseParallaxMultiplier="1.0"
    android:layout_height="100dp">


    <android.support.constraint.ConstraintLayout

        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.49"
        android:layout_marginBottom="1dp">

        <ImageView
            android:id="@+id/image_type"

            android:scaleType="centerCrop"

            android:contentDescription=""
            tools:ignore="ContentDescription,PxUsage"
            android:layout_height="76dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.49"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="125dp" />




        <TextView
            android:id="@+id/namedrawer"
            android:text="Modelo"
            android:textStyle="bold"

            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#ffcc00"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintLeft_toRightOf="@+id/image_type"
            android:layout_marginLeft="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="textStart" />


        <TextView
            android:id="@+id/description"
            android:text="Description"
            android:textStyle="italic"

            tools:ignore="HardcodedText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textColor="#808080"
            android:textSize="15sp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.66"
            android:textAlignment="textStart"
            app:layout_constraintLeft_toLeftOf="@+id/namedrawer"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/namedrawer" />


        <ImageButton
            android:layout_width="102dp"
            android:layout_height="27dp"
            app:srcCompat="@android:drawable/btn_star_big_off"
            android:id="@+id/starButton"
            android:background="@android:color/background_light"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.93"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/image_type"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/description"
            android:layout_marginBottom="8dp"
            android:scaleType="centerInside" />

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>

